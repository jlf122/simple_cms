<% @page_title = "Sections" %>

<%= link_to("<< Back to List", {:action => 'index', :page_id => @page.id}, :class => 'back-link') %>

<div class="sections delete">
  <h2>You are about to permanently delete this page!</h2>

  <%= form_for(:section, :url => {:action => 'destroy', :id => @section.id, :page_id => @page.id}) do |f| %>

    <p>This action cannot be undone!!!</p>

    <p class="reference-name"><%= @section.name %></p>

    <div class="form-buttons">
      <%= submit_tag("Delete Section") %>
    </div>

  <% end %>
</div>
